<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slider_bg_slider3"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="@dimen/slider_image_size_width"
            android:layout_height="@dimen/slider_image_size_height"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:src="@drawable/ic_python"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/python_title_slider"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:textSize="@dimen/slide_text_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="@dimen/text_description_padding"
            android:paddingRight="@dimen/text_description_padding"
            android:text="@string/python_description_slider"
            android:textAlignment="center"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:textSize="@dimen/slide_text_description"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>